## Ubuntu Aliases ##

alias update='sudo apt-get update'
alias upgrade='sudo apt-get upgrade'
alias dist='sudo apt-get dist-upgrade'
alias ins='sudo apt-get install'
alias rem='sudo apt-get remove'
alias autorem='sudo apt-get autoremove'
alias autoclean='sudo apt-get autoclean'
alias lcp='sudo localepurge'
alias ppa='sudo add-apt-repository'

alias search='apt-cache search'
alias show='apt-cache show'

alias led='leafpad ~/.bash_aliases'
alias bsu='source ~/.bash_aliases'
alias q='exit'
alias md='sudo updatedb'
alias reboot='sudo reboot'
